<div class="row">
  <div class="twelve columns">
    <p id="notice"><%= notice %></p>

    <h1>Lang-o-Tron</h1>

    <%= render 'form', git_hub_account: GitHubAccount.new %>

    <table class="u-full-width">
      <thead>
        <tr>
          <th>Account</th>
          <th>Favourite language</th>
        </tr>
      </thead>

      <tbody>
        <% @git_hub_accounts.each do |git_hub_account| %>
          <tr>
            <td><%= git_hub_account.name %></td>
            <td><%= git_hub_account.favourite_language %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
