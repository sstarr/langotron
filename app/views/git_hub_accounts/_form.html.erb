<%= form_with(model: git_hub_account, local: true) do |form| %>
  <div class="row">
    <div class="twelve columns">
      <% if git_hub_account.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(git_hub_account.errors.count, "error") %> prohibited this github_account from being saved:</h2>

          <ul>
            <% git_hub_account.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="six columns">
      <%= form.label :name, 'Enter GitHub account name:' %>
      <%= form.text_field :name, id: :git_hub_account_name, class: 'u-full-width' %>
    </div>
    <div class="six columns">
      <label>&nbsp;</label>
      <%= form.submit 'Find favourite language', class: 'button-primary' %>
    </div>
  </div>
<% end %>
